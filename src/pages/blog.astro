<!doctype html>
<html lang="en">
    <head>
        <BaseHead title="Blog" description="Explore our collection of articles, ideas, insights, and everything in between." />
        <style>
            /* Ensure the body takes up at least the full viewport height */
            body {
                min-height: 100vh;
                display: flex;
                flex-direction: column;
                margin: 0;
            }

            main {
                flex: 1;
                width: 100%;
                max-width: 1400px;
                margin: 0 auto;
                padding: 2rem;
                display: flex;
                flex-direction: column;
            }

            .blog-header {
                text-align: center;
                /* margin-bottom: 4rem; */
                padding: 4rem 1rem;
                background: linear-gradient(
                    180deg,
                    rgba(var(--accent), 0.08) 0%,
                    rgba(var(--accent), 0.02) 100%
                );
                border-radius: 1.5rem;
            }

            .blog-title {
                font-size: 3rem;
                font-weight: 800;
                color: rgb(var(--black));
                margin-bottom: 1rem;
                line-height: 1.2;
            }

            .blog-description {
                font-size: 1.25rem;
                color: rgb(var(--gray));
                max-width: 600px;
                line-height: 1.6;
                margin: 0 auto;
            }

            .tags {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5em;
                margin: 1em 0;
                justify-content: center;
            }

            .tag {
                background-color: rgba(var(--gray-light), 0.5);
                color: rgb(var(--gray-dark));
                padding: 0.2em 0.8em;
                border-radius: 1em;
                font-size: 0.9em;
                text-decoration: none;
                transition: all 0.2s ease;
                display: inline-flex;
                align-items: center;
                gap: 0.3em;
            }

            .tag:hover {
                background-color: rgba(var(--accent), 0.1);
                color: rgb(var(--accent));
                transform: translateY(-2px);
            }

            .tag-count {
                background: rgba(var(--gray-dark), 0.15);
                padding: 0.1em 0.4em;
                border-radius: 0.7em;
                font-size: 0.8em;
                font-weight: 600;
            }

            .posts-grid {
                display: grid;
                /* 1 block */
                /* grid-template-columns: 1fr; */
                /* 2 blocks */
                grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
                /* 3 blocks */
                /* grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); */
                gap: 2rem;
                flex: 1;
                margin-bottom: 2rem;
            }

            /* Empty state for when there are no posts */
            .no-posts {
                text-align: center;
                padding: 4rem 1rem;
                color: rgb(var(--gray));
                font-size: 1.25rem;
                flex: 1;
            }

            .view-toggle {
                display: flex;
                justify-content: center;
                margin-bottom: 2rem;
                gap: 0.5rem;
            }

            .view-btn {
                background-color: rgba(var(--gray-light), 0.5);
                border: 2px solid transparent;
                padding: 0.75rem 1.25rem;
                border-radius: 0.75rem;
                cursor: pointer;
                transition: all 0.2s ease;
                font-size: 1rem;
                color: rgb(var(--gray-dark));
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .view-btn:hover {
                background-color: rgba(var(--accent), 0.1);
                color: rgb(var(--accent));
            }

            .view-btn.active {
                background-color: rgba(var(--accent), 0.15);
                border-color: rgb(var(--accent));
                color: rgb(var(--accent));
                font-weight: 600;
            }

            .view-btn svg {
                width: 20px;
                height: 20px;
            }

            /* List view styles */
            .posts-grid.list-view {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .posts-grid.list-view :global(article) {
                display: flex;
                flex-direction: row;
                max-height: 150px;
            }

            .posts-grid.list-view :global(article img) {
                width: 200px;
                height: 150px;
                object-fit: cover;
            }

            .posts-grid.list-view :global(article .content) {
                flex: 1;
            }

            @media (max-width: 768px) {
                .blog-header {
                    padding: 3rem 1rem;
                    margin-bottom: 3rem;
                }

                .blog-title {
                    font-size: 2.25rem;
                }

                .blog-description {
                    font-size: 1.125rem;
                    padding: 0 1rem;
                }

                .posts-grid {
                    grid-template-columns: 1fr;
                    gap: 1.5rem;
                }

                .posts-grid.list-view :global(article img) {
                    width: 120px;
                    height: 120px;
                }

                .tags {
                    gap: 0.4em;
                }

                .tag {
                    font-size: 0.8em;
                    padding: 0.15em 0.6em;
                }

                .view-toggle {
                    margin-bottom: 1.5rem;
                }

                .view-btn {
                    padding: 0.6rem 1rem;
                    font-size: 0.9rem;
                }
            }

        </style>
    </head>
    <body>
        <Header />
        <main>
            <div class="blog-header">
                <h1 class="blog-title">All Blogs</h1>
                <p class="blog-description">See My Awsome Posts ;)</p>
                <div class="tags">
                    {sortedTags.map(([tag, count]) => (
                        <a 
                            href={`/blogs/tag/${tag}/`}
                            class="tag"
                        >
                            #{tag}
                            <span class="tag-count">{count}</span>
                        </a>
                    ))}
                </div>
            </div>

            <div class="view-toggle">
                <button class="view-btn active" data-view="card" aria-label="Card view">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                    </svg>
                    
                </button>
                <button class="view-btn" data-view="list" aria-label="List view">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>

            {posts.length > 0 ? (
                <div class="posts-grid" id="posts-grid">
                    {posts.map((post) => (
                        <BlogCard
                            title={post.data.title}
                            description={post.data.description ?? undefined}
                            date={post.data.created_date ?? undefined}
                            slug={post.data.slug ?? post.id}
                        />
                    ))}
                </div>
            ) : (
                <div class="no-posts">
                    No posts found. Check back soon!
                </div>
            )}
        </main>
        <Footer />

        <script>
            // View toggle functionality
            const viewButtons = document.querySelectorAll('.view-btn');
            const postsGrid = document.getElementById('posts-grid');
            const STORAGE_KEY = 'blog-view-preference';

            // Load saved preference
            function loadViewPreference() {
                const savedView = localStorage.getItem(STORAGE_KEY) || 'card';
                setView(savedView);
            }

            // Set view and update UI
            function setView(view: string) {
                viewButtons.forEach(btn => {
                    const btnView = btn.getAttribute('data-view');
                    if (btnView === view) {
                        btn.classList.add('active');
                    } else {
                        btn.classList.remove('active');
                    }
                });

                if (postsGrid) {
                    if (view === 'list') {
                        postsGrid.classList.add('list-view');
                    } else {
                        postsGrid.classList.remove('list-view');
                    }
                }

                localStorage.setItem(STORAGE_KEY, view);
            }

            // Add click handlers
            viewButtons.forEach(btn => {
                btn.addEventListener('click', () => {
                    const view = btn.getAttribute('data-view');
                    if (view) {
                        setView(view);
                    }
                });
            });

            // Load preference on page load
            loadViewPreference();
        </script>
    </body>
</html> 