<!doctype html>
<html lang="en">
    <head>
        <BaseHead title="Projects" description="Some Project I've made :D" />
		<style>
			main {
                flex: 1;
                width: 100%;
                max-width: 1400px;
                margin: 0 auto;
                padding: 2rem;
                display: flex;
                flex-direction: column;
            }

            .blog-header {
                text-align: center;
                margin-bottom: 4rem;
                padding: 4rem 1rem;
                background: linear-gradient(
                    180deg,
                    rgba(var(--accent), 0.08) 0%,
                    rgba(var(--accent), 0.02) 100%
                );
                border-radius: 1.5rem;
            }
			
			.blog-title {
                font-size: 3rem;
                font-weight: 800;
                color: rgb(var(--black));
                margin-bottom: 1rem;
                line-height: 1.2;
            }

            .blog-description {
                font-size: 1.25rem;
                color: rgb(var(--gray));
                max-width: 600px;
                line-height: 1.6;
                margin: 0 auto;
            }

            .projects-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
                gap: 2rem;
                flex: 1;
                margin-bottom: 2rem;
            }

            .no-projects {
                text-align: center;
                padding: 4rem 1rem;
                color: rgb(var(--gray));
                font-size: 1.25rem;
                flex: 1;
            }

            @media (max-width: 768px) {
                .projects-grid {
                    grid-template-columns: 1fr;
                    gap: 1.5rem;
                }
            }
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="blog-header">
                <h1 class="blog-title">Projects</h1>
                <p class="blog-description">Some Project I've made :D</p>
            </div>
			
			{projects.length > 0 ? (
                <div class="projects-grid">
                    {projects.map((project) => (
                        <ProjectCard
                            title={project.title}
                            description={project.description}
                            previewImage={project.previewImage}
                            blogSlug={project.blogSlug}
                            tech={project.tech}
                        />
                    ))}
                </div>
            ) : (
                <div class="no-projects">
                    No projects found. Check back soon!
                </div>
            )}
			
		</main>
		<Footer />
	</body>
</html>