---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="copyright">
			&copy; {today.getFullYear()} Obsidian Blogger. All rights reserved.
		</div>
	</div>
</footer>

<style>
	footer {
		padding: 3rem 1rem;
		background: rgba(var(--gray-light), 0.5);
		color: rgb(var(--gray));
		border-top: 1px solid rgba(var(--gray), 0.1);
	}

	.footer-content {
		max-width: 920px;
		margin: 0 auto;
		text-align: center;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5rem;
		margin-bottom: 1.5rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2.5rem;
		height: 2.5rem;
		color: rgb(var(--gray-dark));
		border-radius: 0.75rem;
		transition: all 0.2s ease;
		background: rgba(var(--gray-light), 0.5);
	}

	.social-link:hover {
		color: rgb(var(--black));
		background: rgba(var(--gray), 0.1);
		transform: translateY(-2px);
	}

	.social-link svg {
		width: 1.5rem;
		height: 1.5rem;
	}

	.copyright {
		font-size: 0.9rem;
		color: rgb(var(--gray));
	}

	@media (max-width: 720px) {
		footer {
			padding: 2rem 1rem;
		}

		.social-link {
			width: 2.25rem;
			height: 2.25rem;
		}

		.social-link svg {
			width: 1.25rem;
			height: 1.25rem;
		}
	}
</style>
